Config {

   -- appearance
     font =         "xft:Lucida Grande:Bold:size=11:bold:antialias=true, Noto Sans CJK KR:size=11:antialias=true"
   , additionalFonts = ["xft:Font Awesome:size=11:antialias=true"]
   , bgColor =      "#2E3440"
   , fgColor =      "#ECEFF4"
   , position =     BottomSize C 100 25

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " %StdinReader%  }{ %multicpu% %memory% %dynnetwork% %date% "

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   , commands =

        -- network activity monitor (dynamic interface resolution)
        [ Run DynNetwork     [ "--template" , "<fc=#ebcb8b><fn=1>\xf0ac</fn></fc> <tx>/<rx>"
                             , "-w"         , "3"
                             , "-c"         , "0"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<fc=#bf616a><fn=1>\xf108</fn></fc> <total0>"
                             , "-w"         , "2"
                             , "-c"         , "0"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "Temp: <core0>째C|<core1>째C"
                             , "--Low"      , "70"        -- units: 째C
                             , "--High"     , "80"        -- units: 째C
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 50

        -- memory usage monitor
        , Run Memory         [ "--template" ,"<fc=#d08770><fn=1>\xf2db</fn></fc> <usedratio>"
                             ] 10

        -- time and date indicator
        , Run Date           "<fc=#a3be8c><fn=1>\xf133</fn></fc> %a, %d %B %H:%M" "date" 100

        ,Run StdinReader
        ]
}
